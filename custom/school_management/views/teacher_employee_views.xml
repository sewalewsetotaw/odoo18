<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_teacher_list" model="ir.ui.view">
        <field name="name">hr.employee.teacher.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="is_teacher"/>
            </xpath>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">hr.employee.teacher.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Insert after Tags -->
            <xpath expr="//field[@name='category_ids']" position="after">
                <group string="Teacher Info">
                    <field name="is_teacher"/>
                    <field name="qualification"/>
                    <field name="joining_date"/>
                </group>
            </xpath>
            <!-- Add Course and Section tabs -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Course Details">
                    <field name="course_ids"/>
                </page>
                <page string="Assigned Section Details">
                    <field name="section_ids"/>
                </page>
                <page string="Schedule Details">
                    <field name="timetable_ids"/>
                </page>
            </xpath>
        </field>
    </record>
    <!--Search View-->
    <record id="view_teacher_search" model="ir.ui.view">
        <field name="name">hr.employee.teacher.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_department']" position="after">
                <!-- Add Teachers filter -->
                <filter string="Teachers" name="teacher_filter" domain="[('is_teacher', '=', True)]"/>
            </xpath>
        </field>
    </record>

