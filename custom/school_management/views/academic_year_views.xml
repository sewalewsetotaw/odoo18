<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- List View -->
    <record id="view_academic_year_list" model="ir.ui.view">
        <field name="name">academic.year.list.views</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <list string="Academic Year">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_academic_year_form" model="ir.ui.view">
        <field name="name">academic.year.form.views</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <form string="Academic Year">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>