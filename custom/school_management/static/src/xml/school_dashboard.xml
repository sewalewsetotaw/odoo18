<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="school_management.SchoolDashboard">
        <div class="container-fluid" style="margin: 20px;">
            <!-- Tiles Row 1 -->
            <div class="row mb-4">
                <!-- Students -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-users fa-3x text-success"></i>
                        <div class="h3 mt-2" t-att-id="'total_students'">0</div>
                        <div>Students</div>
                    </div>
                </div>
                <!-- Enrollments -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-book fa-3x text-primary"></i>
                        <div class="h3 mt-2" t-att-id="'total_enrollments'">0</div>
                        <div>Enrollments</div>
                    </div>
                </div>
                <!-- Fees -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-money fa-3x text-warning"></i>
                        <div class="h3 mt-2" t-att-id="'total_fees'">0</div>
                        <div>Fees Collected</div>
                    </div>
                </div>
                <!-- Attendance -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-check-circle fa-3x text-danger"></i>
                        <div class="h3 mt-2" t-att-id="'total_attendance'">0</div>
                        <div>Attendance Records</div>
                    </div>
                </div>
            </div>

            <!-- Tiles Row 2 -->
            <div class="row mb-4">
                <!-- Courses -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-graduation-cap fa-3x text-info"></i>
                        <div class="h3 mt-2" t-att-id="'total_courses'">0</div>
                        <div>Courses</div>
                    </div>
                </div>
                <!-- Teachers -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-users fa-3x text-success"></i>
                        <div class="h3 mt-2" t-att-id="'total_teachers'">0</div>
                        <div>Teachers</div>
                    </div>
                </div>
                <!-- Sections -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                            <i class="fa fa-home fa-3x text-dark"></i>
                        <div class="h3 mt-2" t-att-id="'total_sections'">0</div>
                        <div>Sections</div>
                    </div>
                </div>
                <!-- Exams -->
                <div class="col-md-3 col-sm-6">
                    <div class="card text-center shadow-sm p-3 mb-3 bg-white rounded">
                        <i class="fa fa-clipboard fa-3x text-muted"></i>
                        <div class="h3 mt-2" t-att-id="'total_exams'">0</div>
                        <div>Exams</div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
